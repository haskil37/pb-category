@{
    Layout = null;
    ViewBag.Title = "Расчет категорий";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                <li>@Html.ActionLink("Проект", "Index", "Home")</li>
                <li>@Html.ActionLink("Расчет", "About", "Home")</li>
                <li>@Html.ActionLink("Справка", "Contact", "Home")</li>
            </ul>
        </div>
    </nav>
    <div class="col-md-6">
        <div class="brand">
            <img src="~/Content/logo.png" />
            <h1><b>Расчет категории помещений и зданий</b></h1>
            <h4>по взрывопожарной и пожарной опасности</h4>
        </div>
    </div>
    <div>
    </div>
    <div class="container body-content">

        <div class="row padding-footer"></div>
        <div class="row">
            <div id="myCarousel" class="carousel slide">
                <div class="carousel-inner">
                    <div class="item active">
                        <div class="row">
                            <div class="col-xs-3">
                                <div class="menu-container">
                                    <a href="/Home/SelectCategory">
                                        <h2>Складские помещения</h2>
                                        <img src="~/Content/1.png" alt="Складские помещения" class="img-responsive">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-3">
                                <div class="menu-container">

                                    <a href="#">
                                        <h2>Производственные помещения</h2>
                                        <img src="~/Content/2.png" alt="Image" class="img-responsive">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-3 ">
                                <div class="menu-container">

                                    <a href="#">
                                        <h2>Помещения гаражей, автостоянок</h2>
                                        <img src="~/Content/3.png" alt="Image" class="img-responsive">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-3">
                                <div class="menu-container">

                                    <a href="#">
                                        <h2>Помещения объектов торговли</h2>
                                        <img src="~/Content/4.png" alt="Image" class="img-responsive">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="item menu">
                        <div class="row">
                            <div class="col-xs-3">
                                <div class="menu-container">
                                    <a href="/Home/Calculate">
                                        <h2>Складские помещения</h2>
                                        <img src="~/Content/1.png" alt="Складские помещения" class="img-responsive">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-3">
                                <div class="menu-container">

                                    <a href="#">
                                        <h2>Производственные помещения</h2>
                                        <img src="~/Content/2.png" alt="Image" class="img-responsive">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-3 ">
                                <div class="menu-container">

                                    <a href="#">
                                        <h2>Помещения гаражей, автостоянок</h2>
                                        <img src="~/Content/3.png" alt="Image" class="img-responsive">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-3">
                                <div class="menu-container">

                                    <a href="#">
                                        <h2>Помещения объектов торговли</h2>
                                        <img src="~/Content/4.png" alt="Image" class="img-responsive">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row slide-control">
            <div class="col-xs-offset-3 col-xs-1" align="center"><a href="#myCarousel" data-slide="prev">‹</a></div>
            <div class="col-xs-4" align="center"><span class="slide-text">Виды расчетов</span></div>
            <div class="col-xs-1" align="center"><a href="#myCarousel" data-slide="next">›</a></div>
        </div>
        <div class="row padding-footer"></div>
        <footer>
            <hr />
            <div class="pull-left">
                <p>&copy; С. Садков, В. Попов @DateTime.Now.Year</p>
            </div>
            <div class="pull-right text-right">
                <img src="~/Content/fond.png" class="fond" />
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $('#myCarousel').carousel({
            interval: false
        });
    </script>
</body>
</html>