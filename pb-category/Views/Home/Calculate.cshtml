@{
    ViewBag.Title = "Расчет";
}
@using (Ajax.BeginForm("CalculateSteps", new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "Steps",
}))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <input type="submit" class="btn center" value="Перейти к следующему шагу" id="Answer" />
        <div id="Steps">
            @{ Html.RenderPartial("CalculateSteps"); }
        </div>
    </div>
}
