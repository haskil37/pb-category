@{
    ViewBag.Title = "Выбор категории";
}
<div class="row">
    <div class="col-xs-2 col-xs-offset-1">
        <span id="Category" class="circle"><u>A</u></span>
        <div class="checkboxCategory"><input type="checkbox" name="A" value="Горючие газы" /></div>
        <div class="checkboxCategory"><input type="checkbox" name="A" value="ЛВЖ с температурой вспышки не более 28 °С" /></div>
        <div class="checkboxCategory"><input type="checkbox" name="A" value="Способные взрываться и гореть вещества и материалы при взаимодействии с водой, кислородом воздуха или друг с другом" /></div>        
    </div>
    <div class="col-xs-2">
        <span id="Category" class="circle"><u>Б</u></span>
        <div class="checkboxCategory"><input type="checkbox" name="A" value="Горючие пыли или волокна" /></div>
        <div class="checkboxCategory"><input type="checkbox" name="A" value="ЛВЖ с температурой вспышки более 28 °С" /></div>
        <div class="checkboxCategory"><input type="checkbox" name="A" value="Горючие жидкости" /></div>
    </div>
    <div class="col-xs-2">
        <span id="Category" class="circle"><u>В</u></span>
        <div class="checkboxCategory"><input type="checkbox" name="A" value="Твердые горючие и трудногорючие вещества и материалы" /></div>
        <div class="checkboxCategory"><input type="checkbox" name="A" value="Трудногорючие жидкости" /></div>
    </div>
    <div class="col-xs-2">
        <span id="Category" class="circle"><u>Г</u></span>
        <div class="checkboxCategory"><input type="checkbox" name="A" value="Негорючие вещества и материалы в горячем состоянии (раскаленном или расплавленном)" /></div>
        <div class="checkboxCategory"><input type="checkbox" name="A" value="Сжигаемые в качестве топлива горючие газы, жидкости и твердые вещества, которые" /></div>        
    </div>
    <div class="col-xs-2">
        <span id="Category" class="circle"><u>Д</u></span>
        <div class="checkboxCategory"><input type="checkbox" name="A" value="Негорючие вещества и материалы в холодном состоянии" /></div>        
    </div>
</div>

