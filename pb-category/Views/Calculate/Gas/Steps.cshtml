@if (ViewBag.Step < 9)
{
    <div class="panel panel-default">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse@(ViewBag.Step)">
            <div class="panel-heading">
                <h4 class="panel-title">
                    Шаг @ViewBag.Step
                    @{ Html.RenderPartial("Gas/Step" + (int)ViewBag.Step + "_H"); }
                </h4>
            </div>
        </a>
        <div id="collapse@(ViewBag.Step)" class="panel-collapse collapse">
            <div class="panel-body">
                @{ Html.RenderPartial("Gas/Step" + (int)ViewBag.Step); }
            </div>
        </div>
    </div>
}
<div id="Steps">
    <input type="submit" class="btn center" value="Перейти к следующему шагу" id="Next"/>
    @for (int i = @ViewBag.Step + 1; i <= 8; i++)
    {
        <div class="panel panel-default">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapse@(i)">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        Шаг @i
                    </h4>
                </div>
            </a>
        </div>
    }
    <script>
        $(function () {
            jQuery('[href*="collapse' + @ViewBag.Step + '"]').click();
            if(@ViewBag.Step == 9){
                jQuery('[href*="collapse8"]').click();
            }
        });
    </script>
</div>